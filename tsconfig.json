{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"],
    }
  },
  "include": [
    "src",
    "tests"
  ],
}